@model IEnumerable<Registro_de_Inscripciones.Models.Inscripcion>
@{
    ViewData["Title"] = "Listado de Inscripciones";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h2>Inscripciones</h2>

            @if (TempData["MensajeExito"] != null)
            {
                <div class="alert alert-success">@TempData["MensajeExito"]</div>
            }

            <a class="btn btn-primary mb-3" asp-action="Crear">Nueva inscripción</a>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>Correo</th>
                            <th>Teléfono</th>
                            <th>Taller</th>
                            <th>Nivel</th>
                            <th>Fecha</th>
                            <th>Aceptó Términos</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr><td colspan="9" class="text-center">No hay inscripciones aún.</td></tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.Apellidos</td>
                                    <td>@item.Correo</td>
                                    <td>@item.Telefono</td>
                                    <td>@item.Taller</td>
                                    <td>@item.NivelExperiencia</td>
                                    <td>@item.FechaTaller.ToString("yyyy-MM-dd")</td>
                                    <td>@(item.AceptaTerminos ? "Sí" : "No")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

